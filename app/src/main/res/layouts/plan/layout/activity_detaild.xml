<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/activityDetailSerialNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Serial No"
            android:textColorHint="#ffc6c6c6"
            android:backgroundTint="@color/gray"
            android:inputType="number"
            android:textSize="15dp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/activityDetailDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Date Of Visit"
            android:inputType="date"
            android:textColorHint="#ffc6c6c6"
            android:backgroundTint="@color/gray"
            android:textSize="15dp" />
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/activityDetailVillage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#ffc6c6c6"
            android:backgroundTint="@color/gray"
            android:hint="Village"
            android:inputType="text"
            android:textSize="15dp" />
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/activityDetailActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#ffc6c6c6"
            android:backgroundTint="@color/gray"
            android:hint="Activity"
            android:inputType="text"
            android:textSize="15dp" />
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/activityDetailFaculty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Faculty/Student/Staff Name"
            android:textColorHint="#ffc6c6c6"
            android:backgroundTint="@color/gray"
            android:textSize="15dp" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/market"
        android:layout_gravity="center"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:letterSpacing="0.2"
        android:padding="12dp"
        android:text="SUBMIT"
        android:textColor="#fff"
        android:textStyle="bold" />

</LinearLayout>
