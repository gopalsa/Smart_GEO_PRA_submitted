<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/parentLinear">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <nec.cst.pra.CustomFontEditText
            android:id="@+id/entityName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Map Entity With Facilitator "
            android:textColorHint="#ffc6c6c6"
            android:backgroundTint="@color/gray"
            android:textSize="15dp"
            android:inputType="text"
            app:category="@string/selectable"
            app:tittle="Entity Name"
            app:choices="AJMER,ALWAR,BANSWARA,BARAN,BARMER,BHARATPUR,BHILWARA,BIKANER " />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#ffc6c6c6"
            android:backgroundTint="@color/gray"
            android:textSize="15dp"
            android:inputType="text"
            android:hint="User Name " />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/designations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#ffc6c6c6"
            android:backgroundTint="@color/gray"
            android:textSize="15dp"
            android:inputType="text"
            android:hint="Designation " />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/EmailId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#ffc6c6c6"
            android:backgroundTint="@color/gray"
            android:textSize="15dp"
            android:inputType="text"
            android:hint="Email-Id " />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/mobileNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#ffc6c6c6"
            android:backgroundTint="@color/gray"
            android:textSize="15dp"
            android:inputType="number"
            android:hint="Mobile No" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:letterSpacing="0.2"
        android:textSize="15dp"
        android:padding="12dp"
        android:text="SUBMIT"
        android:textColor="#fff"
        android:textStyle="bold" />





</LinearLayout>
