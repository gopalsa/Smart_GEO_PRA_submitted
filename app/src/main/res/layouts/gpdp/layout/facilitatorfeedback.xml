<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/parentLinear">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/gramName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColorHint="#ffc6c6c6"
            android:backgroundTint="@color/gray"
            android:textSize="15dp"
            android:hint="Gram Panchayat Name"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <nec.cst.pra.CustomFontEditText
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#ffc6c6c6"
            android:backgroundTint="@color/gray"
            android:layout_marginTop="5dp"
            app:category="@string/date"
            android:inputType="date"
            android:textSize="15dp"
            android:hint="Gram Sabha Date"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/people"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#ffc6c6c6"
            android:backgroundTint="@color/gray"
            android:layout_marginTop="5dp"
            android:inputType="number"
            android:textSize="15dp"
            android:hint="Number of people present in Gram Sabha"/>
    </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/sc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#ffc6c6c6"
                    android:backgroundTint="@color/gray"
                    android:layout_marginTop="5dp"
                    android:inputType="number"
                    android:textSize="15dp"
                    android:hint="Number of SC's present in Gram Sabha"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/st"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#ffc6c6c6"
                    android:backgroundTint="@color/gray"
                    android:layout_marginTop="5dp"
                    android:inputType="number"
                    android:textSize="15dp"
                    android:hint="Number of ST's present in Gram Sabha"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/shg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#ffc6c6c6"
                    android:backgroundTint="@color/gray"
                    android:layout_marginTop="5dp"
                    android:inputType="number"
                    android:textSize="15dp"
                    android:hint="Number of SHG members present in Gram Sabha"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/women"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#ffc6c6c6"
                    android:backgroundTint="@color/gray"
                    android:layout_marginTop="5dp"
                    android:inputType="number"
                    android:textSize="15dp"
                    android:hint="Number of Women in Gram Sabha"/>
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#ffc6c6c6"
                android:backgroundTint="@color/gray"
                android:layout_marginTop="5dp"
                android:textSize="15dp"
                android:text="Department Workers Details"
                />


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <nec.cst.pra.CustomFontEditText
                    android:id="@+id/department"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#ffc6c6c6"
                    android:backgroundTint="@color/gray"
                    android:layout_marginTop="5dp"
                    android:inputType="number"
                    android:textSize="15dp"
                    android:hint="Department"
                    app:category="@string/selectable"
                    app:choices="Department of Agriculture , Presentation and validation of Mission Antyodaya data , Presentation by SHG regarding poverty issues and poverty reduction plans"
                    app:tittle="department"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <nec.cst.pra.CustomFontEditText
                    android:id="@+id/frontLineWorker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#ffc6c6c6"
                    android:backgroundTint="@color/gray"
                    android:layout_marginTop="5dp"
                    android:inputType="number"
                    android:textSize="15dp"
                    android:hint="Front Line Worker"
                    app:category="@string/selectable"
                    app:choices="Yes,No"
                    app:tittle="department"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <nec.cst.pra.CustomFontEditText
                    android:id="@+id/whetherAvailable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#ffc6c6c6"
                    android:backgroundTint="@color/gray"
                    android:layout_marginTop="5dp"
                    android:inputType="number"
                    android:textSize="15dp"
                    android:hint="Whether he is available"
                    app:category="@string/selectable"
                    app:choices="Yes,No"
                    app:tittle="Whether he is available"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <nec.cst.pra.CustomFontEditText
                    android:id="@+id/whetherdelivered"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#ffc6c6c6"
                    android:backgroundTint="@color/gray"
                    android:layout_marginTop="5dp"
                    android:inputType="number"
                    android:textSize="15dp"
                    android:hint="Whether he is delivered the presentation"
                    app:category="@string/selectable"
                    app:choices="Yes,No"
                    app:tittle="delivered"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/disscussion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#ffc6c6c6"
                    android:backgroundTint="@color/gray"
                    android:layout_marginTop="5dp"
                    android:inputType="number"
                    android:textSize="15dp"
                    android:text="Disscussion on GPDP"/>
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <nec.cst.pra.CustomFontEditText
                    android:id="@+id/fund"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#ffc6c6c6"
                    android:backgroundTint="@color/gray"
                    android:layout_marginTop="5dp"
                    android:inputType="number"
                    android:textSize="15dp"
                    android:hint="Review of current year fund activities and fund utilized"
                    app:category="@string/selectable"
                    app:choices="Yes,No"
                    app:tittle="Review of current year fund activities and fund utilized"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <nec.cst.pra.CustomFontEditText
                    android:id="@+id/resource"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#ffc6c6c6"
                    android:backgroundTint="@color/gray"
                    android:layout_marginTop="5dp"
                    android:inputType="number"
                    android:textSize="15dp"
                    android:hint="Disscussion on resource likely to available to the Gram panchayat"
                    app:category="@string/selectable"
                    app:choices="Yes,No"
                    app:tittle="resource"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <nec.cst.pra.CustomFontEditText
                    android:id="@+id/gaps"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#ffc6c6c6"
                    android:backgroundTint="@color/gray"
                    android:layout_marginTop="5dp"
                    android:inputType="number"
                    android:textSize="15dp"
                    android:hint="Disscussion on Gaps as emerged  from mission antyodaya and proposed interentions"
                    app:category="@string/selectable"
                    app:choices="Yes,No"
                    app:tittle="resource"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <nec.cst.pra.CustomFontEditText
                    android:id="@+id/resolution"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#ffc6c6c6"
                    android:backgroundTint="@color/gray"
                    android:layout_marginTop="5dp"
                    android:inputType="number"
                    android:textSize="15dp"
                    android:hint="Resolution passed and recorded by Gram Sabha on GPDP"
                    app:category="@string/selectable"
                    app:choices="Yes,No"
                    app:tittle="resource"/>
            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:letterSpacing="0.2"
                android:textSize="15dp"
                android:padding="12dp"
                android:text="SUBMIT"
                android:textColor="#fff"
                android:textStyle="bold" />


</LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>