<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/frontgramName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#ffc6c6c6"
            android:backgroundTint="@color/gray"
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            android:hint="Gram Panchayat Name"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/frontuserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#ffc6c6c6"
            android:backgroundTint="@color/gray"
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            android:hint="User Name"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/frontdesignation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#ffc6c6c6"
            android:backgroundTint="@color/gray"
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            android:hint="Designation"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/frontmobileNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#ffc6c6c6"
            android:backgroundTint="@color/gray"
            android:layout_marginTop="5dp"
            android:inputType="number"
            android:textSize="15dp"
            android:hint="Mobile No"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.design.widget.TextInputEditText
        android:id="@+id/frontEmailId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailSubject"
        android:textColorHint="#ffc6c6c6"
        android:backgroundTint="@color/gray"
        android:layout_marginTop="5dp"
        android:textSize="15dp"
        android:hint="Email-Id " />
</android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/frontWorkerDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailSubject"
            android:textColorHint="#ffc6c6c6"
            android:backgroundTint="@color/gray"
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            android:text="Frontline Worker Detail" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <nec.cst.pra.CustomFontEditText
            android:id="@+id/frontdeptname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailSubject"
            android:textColorHint="#ffc6c6c6"
            android:backgroundTint="@color/gray"
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            android:hint="Department Name"
            app:category="@string/selectable"
            app:choices="Department of Agriculture,Department of Animal Husbandry and Dairying,Department of Chemicals and Petrochemicals,Department of Drinking Water,Department of Education , Department of Finance ,Department of Fisheries , Department of Food and Supply"
            app:tittle="DepartmentName"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/frontfrontLineWorker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailSubject"
            android:textColorHint="#ffc6c6c6"
            android:backgroundTint="@color/gray"
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            android:hint="Front Line Worker" />
    </android.support.design.widget.TextInputLayout>


    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:letterSpacing="0.2"
        android:textSize="15dp"
        android:padding="12dp"
        android:text="SUBMIT"
        android:textColor="#fff"
        android:textStyle="bold" />



</LinearLayout>
