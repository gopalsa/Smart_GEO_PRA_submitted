<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v4.widget.NestedScrollView
                android:id="@+id/scrollview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:fillViewport="true"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/title"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:lineSpacingExtra="2dp"
                            android:textColor="#444"
                            android:textSize="17dp" />

                        <TextView
                            android:id="@+id/exttitle"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/title"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:gravity="center_vertical"
                            android:lineSpacingExtra="2dp"
                            android:textColor="#444"
                            android:textSize="20dp" />

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_gravity="center"
                            android:padding="5dp"
                            android:src="@drawable/ic_print_black_24dp"
                            android:tint="@color/colorPrimary"
                            android:visibility="gone" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/exttitle"
                            android:layout_marginTop="3dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/columnFab"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_margin="10dp"
                                android:src="@drawable/barchart"
                                android:tag="Bar"
                                android:tint="@color/colorPrimary" />

                            <ImageView
                                android:id="@+id/pieFab"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_margin="10dp"
                                android:src="@drawable/piechart"
                                android:tag="Pie"
                                android:tint="@color/colorPrimary" />

                            <ImageView
                                android:id="@+id/lineFab"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_margin="10dp"
                                android:src="@drawable/linegraph"
                                android:tag="Line"
                                android:tint="@color/colorPrimary" />

                        </LinearLayout>
                    </RelativeLayout>

                    <android.support.v4.widget.NestedScrollView
                        android:id="@+id/mainLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clipToPadding="false"
                        android:fillViewport="true"
                        app:layout_behavior="@string/appbar_scrolling_view_behavior">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <com.anychart.AnyChartView
                                android:id="@+id/any_chart_view"
                                android:layout_width="match_parent"
                                android:layout_height="550dp" />

                            <TextView
                                android:id="@+id/noGraphQues"
                                android:layout_width="match_parent"
                                android:layout_height="550dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="No Graph For This Question"
                                android:textSize="40dp"
                                android:visibility="gone" />
                        </LinearLayout>
                    </android.support.v4.widget.NestedScrollView>

                    <TextView
                        android:id="@+id/subtitle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical"
                        android:lineSpacingExtra="2dp"
                        android:textColor="#444"
                        android:textSize="17dp" />

                    <LinearLayout
                        android:id="@+id/inferLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp">

                            <EditText
                                android:id="@+id/relevanceToTheSurvey"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:hint="Relevance of this Research question"
                                android:inputType="textCapSentences|textMultiLine"
                                android:textColorHint="#ffc6c6c6"
                                android:textSize="@dimen/textsize" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp">

                            <EditText
                                android:id="@+id/infer"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:hint="Inference"
                                android:inputType="textCapSentences|textMultiLine"
                                android:textColorHint="#ffc6c6c6"
                                android:textSize="@dimen/textsize" />
                        </android.support.design.widget.TextInputLayout>

                        <Button
                            android:id="@+id/btnSubmit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Submit" />
                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/progressInfer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center" />
                </LinearLayout>
            </android.support.v4.widget.NestedScrollView>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:nestedScrollingEnabled="false"
                android:scrollbars="vertical" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/printImg"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                app:backgroundTint="@color/colorPrimary"
                app:elevation="2.0dip"
                app:fabSize="mini"
                app:rippleColor="@color/soft_grey"
                app:srcCompat="@drawable/ic_print_black_24dp" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
